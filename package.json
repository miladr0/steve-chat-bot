{
  "name": "steve-chat-bot",
  "version": "1.2.2",
  "description": "A NodeJs Chat Bot",
  "author": "",
  "main": "src/index.js",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "start": "cross-env NODE_ENV=production pm2 start --no-daemon ecosystem.config.js --env production",
    "dev": "nodemon ./src/index.js",
    "bot": "node ./src/botCli.js s",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern src/public/ --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix --ignore-pattern src/public/",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --d",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:buildDev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:miladr0/steve-chat-bot.git"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "bodybuilder": "^2.2.17",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^3.0.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^6.0.0",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "figlet": "^1.2.3",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "inquirer": "^7.0.0",
    "joi": "^14.3.1",
    "method-override": "^3.0.0",
    "mime": "2.4.0",
    "moment": "^2.24.0",
    "mongoose": "5.4.3",
    "mongoose-delete": "0.5.0",
    "morgan": "^1.8.1",
    "pm2": "^3.0.0",
    "redis": "^2.8.0",
    "swagger-jsdoc": "3.2.6",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "prettier": "^1.16.4",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  }
}
